<div id="page-wrapper">
  <h1>Speech Input Demo / Tester</h1>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @book do |f| %>
       <%= render "shared/error_messages", object: @book %>
        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= f.label :author %>
        <%= f.text_field :author %>

        <%= f.label :publish_date %>
        <%= f.text_field :publish_date, :placeholder => "dd/mm/yyyy" %>

        <%= f.label :page_number %>
        <%= f.text_field :page_number %>

        <%= f.label :preview %>
        <%= f.text_field :preview %>

        <%= f.label :Catagory %>
        <%= f.select :catagory_id, Catagory.all.collect { |p| [ p.name, p.id ] }, include_blank: true %>

        <%= f.label :detail %>
        <%= f.text_field :detail %>

        <%= f.label :picture %>
        <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png' %>

        <%= f.submit t "addBook", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>



